---
import type { CollectionEntry } from 'astro:content';

interface Props {
  projects: CollectionEntry<'projects'>[];
  current?: string;
}

const { projects, current } = Astro.props;

// Sort projects by date, newest first
const sortedProjects = projects.sort((a, b) => 
  b.data.date.getTime() - a.data.date.getTime()
);

// Group projects by difficulty
const groupedProjects = sortedProjects.reduce((acc, project) => {
  const difficulty = project.data.difficulty;
  if (!acc[difficulty]) acc[difficulty] = [];
  acc[difficulty].push(project);
  return acc;
}, {} as Record<string, CollectionEntry<'projects'>[]>);
---

<nav class="sidebar-nav">
  <div class="sidebar-header">
    <h2>Interactive Graphics</h2>
    <p>Visual programming projects</p>
  </div>
  
  <div class="sidebar-content">
    {Object.entries(groupedProjects).map(([difficulty, projects]) => (
      <div class="project-group">
        <h3 class="group-title">{difficulty}</h3>
        <ul class="project-list">
          {projects.map(project => (
            <li class="project-item">
              <a 
                href={`/projects/${project.slug}`}
                class:list={[
                  'project-link',
                  { 'active': current === project.slug }
                ]}
              >
                <div class="project-info">
                  <span class="project-title">{project.data.title}</span>
                  <span class="project-framework">{project.data.framework}</span>
                </div>
                <div class="project-tags">
                  {project.data.tags.slice(0, 2).map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
  
  <div class="sidebar-footer">
    <a href="/" class="back-link">‚Üê Portfolio</a>
  </div>
</nav>

