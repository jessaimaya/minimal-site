<style>
  .intro {
    margin: var(--space-3xl) 0;
    display: flex;
    justify-content: space-between;
  }
  h2 {
    flex: 1;
    display: flex;
    font-size: var(--step-0);
    text-decoration: none;
    font-weight: normal;
    font-family: "Open Sans", sans-serif;
    color: var(--accent);
  }
  .salute {
    flex: 2;
    font-weight: normal;
    font-size: var(--step-0);
    font-family: "Open Sans", sans-serif;
    color: var(--gray);
  }
  strong {
    display: inline;
    color: var(--accent);
  }
  .stack {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  .description {
    flex: 3;
  }
  .frontend,
  .backend,
  .devops,
  .content {
    color: var(--background);
    font-size: var(--step-0);
    font-weight: normal;
    background-color: var(--accent);
    border-radius: var(--space-m);
    padding: var(--space-s);
  }
  .content,
  .devops,
  .backend {
    flex: 2;
    color: var(--accent);
    background-color: transparent;
    border: solid 1px var(--accent);
  }
  .devops {
    margin: var(--space-m) 0;
  }
  .link {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .styles {
    display: flex;
    margin: var(--space-m) 0;
  }
  a {
    --icon-size: var(--space-l-xl);
    position: relative;
    display: block;
    width: var(--icon-size);
    height: var(--icon-size);
  }
  .icon {
    z-index: 0;
    position: absolute;
    width: var(--icon-size);
    height: var(--icon-size);
    display: block;
    border: solid 1px var(--accent);
    background-color: var(--accent);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: var(--icon-size);
  }
  .arrow {
    top: 0;
    right: 0;
    width: var(--icon-size);
    height: var(--icon-size);
    position: absolute;
    color: var(--background);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.1rem;
    background-color: var(--accent);
    border-radius: var(--icon-size);
    margin-right: calc(calc(var(--icon-size) / 2) * -1);
    margin-top: calc(calc(var(--icon-size) / 2) * -1);
  }
  svg {
    width: var(--icon-size);
    height: var(--icon-size);
    fill: var(--background);
  }
  .photo {
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  img {
    max-width: 80%;
    border-radius: var(--step-1);
  }
  h3 {
    font-weight: normal;
    margin: 0;
    font-family: "Open Sans", sans-serif;
  }
  p {
    font-size: var(--step--1);
  }

  @media (max-width: 48rem) {
    .intro {
      padding: var(--step-0);
      flex-direction: column;
      margin-bottom: 0;
    }
    h2 {
      font-size: var(--step-3);
    }
    .salute {
      font-size: var(--step-1);
    }
    .stack {
      padding: var(--step-0);
      flex-direction: column-reverse;
      justify-content: space-between;
      align-items: center;
    }
    .photo {
      margin: var(--space-l);
    }
    img {
      max-width: 100%;
    }
    .frontend,
    .content {
      font-size: var(--step-1);
    }
    p {
      font-size: var(--step-0);
    }
  }
</style>
